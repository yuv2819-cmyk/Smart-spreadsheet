# Used by docker-compose.prod.yml

# PostgreSQL
POSTGRES_USER=smartsheet
POSTGRES_PASSWORD=change-me
POSTGRES_DB=smart_spreadsheet
DATABASE_URL=postgresql+asyncpg://smartsheet:change-me@db:5432/smart_spreadsheet

# Backend
ENVIRONMENT=production
# Optional fallback service token for server-to-server proxy mode:
MVP_API_TOKEN=replace-with-long-random-token
AUTH_JWT_SECRET=replace-with-at-least-32-char-secret
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=1440
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
ALLOWED_ORIGINS=https://your-app.vercel.app
TRUSTED_HOSTS=your-app.vercel.app,localhost
ENABLE_HTTPS_REDIRECT=true
AUTO_CREATE_SCHEMA=false
AUTO_SEED_MVP_RECORDS=false
MAX_UPLOAD_SIZE_BYTES=10485760
OVERVIEW_CACHE_TTL_SECONDS=30

# Frontend proxy identity
BACKEND_TENANT_ID=1
BACKEND_USER_ID=1
