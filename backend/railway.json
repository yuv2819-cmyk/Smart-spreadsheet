{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "sh -c \"uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8080} --proxy-headers\"",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
